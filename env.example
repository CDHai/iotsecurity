# Flask Configuration
FLASK_APP=app.py
FLASK_ENV=development
SECRET_KEY=your-secret-key-here-change-in-production

# Database Configuration
DATABASE_URL=sqlite:///iot_security.db
# For PostgreSQL: postgresql://user:password@localhost/iot_security
# For MySQL: mysql://user:password@localhost/iot_security

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key-here
JWT_ACCESS_TOKEN_EXPIRES=3600

# Security Settings
BCRYPT_LOG_ROUNDS=12
WTF_CSRF_ENABLED=True

# Network Scanning Configuration
DEFAULT_SCAN_TIMEOUT=30
MAX_CONCURRENT_SCANS=5
SCAN_RESULTS_TTL=3600

# External Services
CVE_API_URL=https://cve.circl.lu/api
SHODAN_API_KEY=your-shodan-api-key-here

# Redis Configuration (for task queue)
REDIS_URL=redis://localhost:6379/0

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/iot_security.log

# Report Configuration
REPORTS_DIR=reports
MAX_REPORT_SIZE_MB=50

# Development Settings
DEBUG=True
TESTING=False

# Docker Configuration
POSTGRES_USER=iot_user
POSTGRES_PASSWORD=iot_password
POSTGRES_DB=iot_security
